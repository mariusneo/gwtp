<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
    	<h1>Create map</h1>
    	
    	<div>
            <g:InlineLabel>Lines:</g:InlineLabel>
            <g:IntegerBox ui:field="linesInput" maxLength="2" debugId="linesInput"/>
        </div>

        <div>
            <g:InlineLabel>Columns:</g:InlineLabel>
            <g:IntegerBox ui:field="columnsInput" maxLength="2" debugId="columnsInput"/>
        </div>

        <div>
            <g:Button ui:field="createMapButton" debugId="createMapBtn">Create</g:Button>
            <g:Button ui:field="closeButton">Close</g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
